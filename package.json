{
  "name": "rahisi-ecommerce",
  "version": "1.0.0",
  "description": "A full-featured e-commerce platform built with the MERN stack",
  "main": "server/src/index.js",
  "scripts": {
    "start": "node server/src/index.js",
    "server": "nodemon server/src/index.js",
    "client": "cd client && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "install": "npm run install-server && npm run install-client",
    "lint": "cd client && npm run lint && cd ../server && npm run lint",
    "build": "cd client && npm run build",
    "seed": "cd server && node src/utils/seeder.js",
    "heroku-postbuild": "npm run install-client && npm run build"
  },
  "keywords": [
    "mern",
    "react",
    "node",
    "mongodb",
    "express",
    "ecommerce",
    "rahisi"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11"
  }
}
